{
  "manifest_version": 3,
  "name": "Cover Letter Generator",
  "version": "1.0",
  "description": "Generate custom cover letters from resume and job postings",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*.myworkdaysite.com/*",
    "https://*.myworkdayjobs.com/*",
    "https://router.huggingface.co/*",
    "https://api-inference.huggingface.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.myworkdayjobs.com/*"],
      "js": ["content.js"]
    }
  ]
}